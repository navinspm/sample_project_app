<div class="container">
<div class="row">
   <div class="col-md-2">
  </div>
   <div class="col-md-9">
    <h2>Projects</h2>            
    <table class="table table-bordered table-striped" id="table">
      <thead>
        <tr>
          <th>Project Title</th>
          <th>UserName</th>
          <th>Category</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
       <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.user.name %></td>
          <td><%= project.category.name %></td>
          <td><%= project.created_at %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-md-2">
  </div>
  </div>
</div>


<div class="row">
<div class="col-md-3"></div>
  <div class="col-md-3">
  Sort By:
  <br> 
      <%= form_tag({:controller=>"welcome", :action=>"index", :remote => "true"},{:id => "sort"}) do %>   
        <select class="select" id="sort" name="sort" >
                <option value="1">Created</option>   
                <option value="2">Category</option> 
                <option value="3">Project</option> 
                <option value="4">User</option>            
        </select>          
        <%= submit_tag ">>",:class => "btn" %>
      <% end %>
  </div>
  <div class="col-md-4"> 
  <%= will_paginate @projects, renderer: BootstrapPagination::Rails %>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
